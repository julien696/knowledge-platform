providers = ["php"]

[phases.setup]
nixPkgs = ["php82", "php82Packages.composer"]

[phases.install]
cmds = [
  "mkdir -p var/cache var/log",
  "composer install --no-dev --optimize-autoloader"
]

[phases.build]
cmds = [
  "chmod -R 777 var/",
  "php bin/console cache:clear --env=prod"
]

[start]
cmd = "php -S 0.0.0.0:$PORT -t public"
